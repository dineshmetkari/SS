package com.stackroute.service;

import java.io.IOException;
import java.net.MalformedURLException;
import java.net.URL;

import javax.net.ssl.HttpsURLConnection;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpEntity;
import org.springframework.http.HttpHeaders;
import org.springframework.http.HttpMethod;
import org.springframework.http.ResponseEntity;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import com.stackroute.model.ApiTermModel;

@Service
public class WordApiService {
	
	@Autowired
	 ApiTermModel apiTermModel;
	 
	public ApiTermModel ApiResults(String term){
		 String uri = "http://words.bighugelabs.com/api/2/b9fb9122bf7e43979c005372b3eb65cf/"+term+"/json";	
		 
		 RestTemplate restTemplate = new RestTemplate();
		 apiTermModel = restTemplate.getForObject(uri, ApiTermModel.class);

		return apiTermModel;
}
}
