package com.stackroute.service;



import java.util.ArrayList;
import java.util.concurrent.ArrayBlockingQueue;

import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import com.google.gson.Gson;
import com.stackroute.model.ApiTermModel;

@Service
public class WordApiService {


	public ArrayList<String> ApiResults(String term){
		String uri = "http://words.bighugelabs.com/api/2/b9fb9122bf7e43979c005372b3eb65cf/"+term+"/json";	
		System.out.println(uri);
		String json="";
		RestTemplate restTemplate = new RestTemplate();
		ApiTermModel apiTermModel =new ApiTermModel();
		try{
			json = restTemplate.getForObject(uri, String.class);
			Gson gson =new Gson();
			ArrayList<String> =gson.fromJson(json, java.util.ArrayList.class);
		}
		catch(Exception e){

			apiTermModel.setWord(term);
			ArrayList<String> tempString = new ArrayList<>();
			apiTermModel.setSynonyms(tempString);
		}
		return apiTermModel;
	}
}
